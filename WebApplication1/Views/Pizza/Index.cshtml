@model IEnumerable<WebApplication1.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-color: wheat
    }
</style>

<h1>Choose ur favourite</h1>


<p>
    <a asp-action="Create" id="Create">Create New</a>
</p>
<div class=" py-5 bg-light" style="background-color :wheat">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="@item.Image" />
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Product Name</th>
                                        <td>@item.Name</td>
                                    </tr>
                                    <tr>
                                        <th>Product Price</th>
                                        <td>@item.Cost</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" id="Back">Back</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" id="Delete">Delete</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" id="Edit">Edit</a>
                                    <a class="btn btn-success" asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id" id="CartAdd">Add to Cart</a>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>
